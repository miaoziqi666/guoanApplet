/* components/me/menuPanel/menuPanel.wxss */

.menu-panel {
  background: #fff;
  overflow: hidden;
  border-bottom: 1rpx solid #eee;
  padding: 20rpx 0;
}

.menu-panel .menu-item {
  float: left;
  width: 25%;
  text-align: center;
  font-size: 28rpx;
  margin: 20rpx 0;
}

.menu-item .icon {
  height: 60rpx;
  width: 60rpx;
  display: block;
  margin: 0 auto;
}

.menu-item .name {
  display: block;
  color: #666;
  margin-top: 15rpx;
}

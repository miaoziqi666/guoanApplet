/* commponent/titleBar/titleBar.wxss */

.group {
  position: relative;
  margin: 30rpx 40rpx 20rpx 40rpx;
  height: 40rpx;
}

.label {
  font-size: 30rpx;
  position: absolute;
  background: #fff;
  z-index: 2;
  padding-right: 30rpx;
}

.label .icon {
  display: inline-block;
  height: 32rpx;
  width: 42rpx;
  background-size: contain;
  background-repeat: no-repeat;
  margin-right: 20rpx;
  vertical-align: middle;
  position: relative;
  top: -2rpx;
}

.label .name {
  vertical-align: middle;
}

.line {
  position: absolute;
  width: 100%;
  height: 4rpx;
  top: 22rpx;
  background-color: #f1f1f1;
}

.link {
  font-size: 24rpx;
  color: #333;
  position: absolute;
  right: 0;
  line-height: 40rpx;
  background: #fff;
  z-index: 2;
  padding-left: 30rpx;
}

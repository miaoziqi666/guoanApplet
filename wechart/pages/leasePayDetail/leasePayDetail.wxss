/* pages/leasePayDetail/leasePayDetail.wxss */
.background {
  background: #e8e8e8;
  position: fixed;
  top: 0;
  bottom: 0;
  width: 100%;
  z-index: -1;
}

.content{
  padding: 15rpx;
}

.info-group{
  background: #fff;
  font-size: 28rpx;
  padding: 10rpx 20rpx;
}

.info-group .info-line{
  padding: 20rpx;
  overflow: hidden;
}

.info-line .info{
  float: right;
  color: #999;
  max-width: 70%;
}

.info .price{
  color: #e24e5a;
}

.content .info-table-block{
  background: #fff;
  padding: 20rpx;
  text-align: center;
}

.info-table-block .header-group{
  background: #f3a654;
  overflow: hidden;
  color: #fff;
  border: 1rpx solid #666;
}

.info-table-block .body-group{
  overflow: hidden;
  border: 1rpx solid #666;
  border-top: none;
}

.info-table-block .grid{
  font-size: 28rpx;
  float: left;
  width: 25%;
  padding: 20rpx;
  border-right:  1rpx solid #666;
}

.info-table-block .grid:last-child{
  border-right: none;
}

.info-table-block .header-group .grid{
  border-right:  1rpx solid #fff;
}

.info-table-block .header-group .grid:last-child{
  border-right: none;
}
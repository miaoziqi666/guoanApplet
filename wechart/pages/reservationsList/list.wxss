/* pages/list/list.wxss */

.background {
  background: #e8e8e8;
  position: fixed;
  top: 0;
  bottom: 0;
  width: 100%;
  z-index: -1;
}

.header {
  height: 300rpx;
  display: block;
  width: 100%;
  position: fixed;
  top: 0;
  z-index: 99;
}

.tab-bar{
  position: fixed;
  top: 300rpx;
  width: 100%;
  z-index: 99;
}


/*约看记录  */
.list-view{
  margin-top: 380rpx;
  padding: 30rpx;
}

.list-view .list-item{
  background: #fff;
  border-radius: 20rpx;
  padding-right: 80rpx;
  font-size: 30rpx;
  overflow: hidden;
  position: relative;
  box-shadow: 2px 3px 5px 1px rgba(204, 204, 204, 0.34);
  margin-bottom: 20rpx;
}

.list-item .title{
  line-height: 60rpx;
  padding: 5rpx 20rpx 5rpx 30rpx;
  border-bottom: 1rpx solid #eee;
}

.title .label{
  color: #ff9b2f;
}

.title .no{
 float: right; 
}

.list-item .body{
  padding: 20rpx 19rpx 30rpx 30rpx;
}


.body .content{
  color: #666;
  margin-bottom: 5rpx;
  
}

.content .house_detail{
  display: flex;
}

.hd_img image{
  width: 170rpx;
  height: 150rpx;
}

.hd_content{
  padding: 0 20rpx;
  line-height: 40rpx;
}

.hdc_name{
  width: 350rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.house-line{
  display: inline;
}

.hdc_area{
  font-size: 24rpx;
  color: #ccc;
  line-height: 55rpx;
}
.tag-group{
  margin: 20rpx 0 0 0; 
  overflow: hidden;
  width: 400rpx;
}

.tag {
  padding: 5rpx 10rpx;
  font-size: 25rpx;
  background: red;
  color: #fff;
  width: 30%;
  display: inline-block;
  margin-right: 3%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-align: center;
  border-radius: 5rpx;
}
.nav_w{
  width: 1rpx;
}

.body .time{
  color: #666;
}

.body .result{
  display: flex;
  font-size: 32rpx;
  margin-top: 15rpx;
  border-top: 1rpx solid #eee;
  justify-content: space-between;
  padding-top:15rpx;
}

.cancel_appoint{
  background-color:white;
  border:.5rpx solid #97CBFF;
  border-radius:4rpx;
  color:#97CBFF;
  padding:0 10rpx;
  height:50rpx;
  font-size:28rpx;
}

.list-item .status{
  position: absolute;
  right: 0;
  width: 60rpx;
  top: 0;
  font-size: 32rpx;
  writing-mode: vertical-rl;
  text-align: center;
  bottom: 0;
  margin: 0 25rpx 0 0;
  letter-spacing: 10rpx;
  border-left: 1rpx solid #eee;
  color: #999;
}

.list-item .status.active{
  color: green;
}

.list-item .status::before{
  content: " ";
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  width: 10rpx;
  background: linear-gradient(to right, rgba(202, 201, 201, 0.20), rgba(0, 0, 0, 0));
}
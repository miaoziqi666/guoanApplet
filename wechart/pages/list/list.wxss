/*空列表提示  */

.empty-block {
  padding: 150rpx 0 20rpx 0;
  font-size: 30rpx;
  text-align: center;
}

.empty-block .empty-image {
  width: 40%;
  margin: 0 auto 20rpx auto;
  display: block;
}

.empty-block .empty-tip {
  display: block;
  width: 80%;
  margin: 0 auto;
  color: #666;
}

.empty-block .bottom-tip {
  color: #e24e59;
  display: block;
  width: 80%;
  margin: 180rpx auto 30rpx auto;
}

.empty-block .continue-btn {
  width: 90%;
  margin: 0 auto;
  background: #e24e59;
  color: #fff;
   font-size: 30rpx;
  line-height: 80rpx;
}

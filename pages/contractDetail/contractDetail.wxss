/* pages/contractDetail/contractDetail.wxss */
.background {
  background: #e8e8e8;
  position: fixed;
  top: 0;
  bottom: 0;
  width: 100%;
  z-index: -1;
}

.content{
  padding: 15rpx;
}

.info-group{
  background: #fff;
  font-size: 28rpx;
  padding: 10rpx 20rpx;
}

.info-group .info-line{
  padding: 20rpx;
}

.info-line .info{
  float: right;
}

.info .number{
  color: #e24e5a;
  margin: 0 15rpx 0 0;
}

.info .status{
  color: #999;
  text-decoration: underline;
}

.info .status.active{
  color: rgb(49, 149, 209);
}

.info .name{
  color: #999;
  margin: 0 15rpx 0 0;
}

.info .phone{
  color: #999;
}